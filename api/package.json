{
  "name": "vin4free-api",
  "version": "0.0.1",
  "description": "VIN API",
  "author": "Antony Repin",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "yarn prebuild && nest build",
    "ci": "yarn lint && yarn test && yarn build",
    "doc": "npx @compodoc/compodoc -p tsconfig.json -s",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prebuild": "rimraf dist",
    "sls-deploy": "rimraf .build && SLS_DEBUG=* sls deploy",
    "sls-local": "rimraf .build && SLS_DEBUG=* sls offline start --noPrependStageInUrl --httpPort 3300",
    "start": "nest start --debug 0.0.0.0:9229 --watch",
    "start-prod": "node dist/main",
    "test": "jest",
    "test-cov": "jest --coverage",
    "test-debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "accept-language-parser": "^1.5.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "i18next": "^19.8.7",
    "i18next-chained-backend": "^2.0.1",
    "i18next-fs-backend": "^1.1.0",
    "i18next-http-backend": "^1.1.1",
    "i18next-http-middleware": "^3.1.0",
    "i18next-json-sync": "^2.3.1",
    "i18next-node-fs-backend": "^2.1.3",
    "i18next-node-mongo-backend": "^0.0.4",
    "joi": "^17.4.0",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "mongoose": "^5.11.11",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@nestjs/cli": "^7.5.1",
    "@nestjs/common": "^7.5.1",
    "@nestjs/config": "^0.6.2",
    "@nestjs/core": "^7.5.1",
    "@nestjs/mongoose": "^7.2.1",
    "@nestjs/platform-express": "^7.5.1",
    "@nestjs/schematics": "^7.1.3",
    "@nestjs/testing": "^7.5.1",
    "@types/accept-language-parser": "^1.5.1",
    "@types/aws-lambda": "^8.10.71",
    "@types/express": "^4.17.8",
    "@types/i18next-fs-backend": "^1.0.0",
    "@types/i18next-node-fs-backend": "^2.1.0",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.6",
    "@types/source-map-support": "^0.5.3",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "serverless-offline": "^6.8.0",
    "serverless-plugin-optimize": "^4.1.4-rc.1",
    "serverless-plugin-typescript": "^1.1.9",
    "source-map-support": "^0.5.19",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.8",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@base/(.*)": "<rootDir>/$1",
      "@admin/(.*)": "<rootDir>/modules/admin/$1",
      "@api/(.*)": "<rootDir>/modules/api/$1",
      "@db/(.*)": "<rootDir>/modules/db/$1",
      "@services/(.*)": "<rootDir>/services/$1"
    }
  }
}
